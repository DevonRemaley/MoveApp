@model IEnumerable<MoveApp.Models.LocationListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Locations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Park)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Park)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }) |
        @Html.ActionLink("Details", "Details", new { id = item.LocationId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.LocationId })
    </td>
</tr>
}

</table>
