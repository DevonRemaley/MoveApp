@model IEnumerable<MoveApp.Models.RideStatsListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Ride Stats</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calories)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BikeType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Distance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Calories)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BikeType)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RideStatsId }) |
        @Html.ActionLink("Details", "Details", new { id = item.RideStatsId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.RideStatsId })
    </td>
</tr>
}

</table>
